<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="Splitter.entity">
    <class name="Splitter.entity.Splitter" table="splitter" >
        <id column="id" name="id" type="int"> <generator class="increment"/></id>
        <property column="login" name="login" type="string"/>
        <property column="password" name="password" type="string"/>
        <property column="fullname" name="fullname" type="string"/>
        <property column="email" name="email" type="string"/>
        <property column="updatebyemail" name="updatebyemail" type="boolean"/>
    </class>
</hibernate-mapping>